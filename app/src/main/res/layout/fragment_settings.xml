<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/usr_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="account"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/usr_cardpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/usr_account"
            android:text="cardpassword"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/usr_netaccount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/usr_cardpassword"
            android:text="netaccount"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/usr_netpassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/usr_account"
            android:text="netpassword"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/usr_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/usr_netpassword"
            android:text="email"
            android:textSize="22sp" />

        <Button
            android:id="@+id/usr_modify"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/usr_email"
            android:text="修改信息"
            android:textSize="22sp" />
    </LinearLayout>
</LinearLayout>